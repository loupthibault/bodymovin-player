{
  "name": "bodymovin-player",
  "version": "1.0.0",
  "description": "Basic player to visualize svg animation played via Bodymovin javascript library",
  "main": "index.js",
  "repository": "git@github.com:loupthibault/bodymovin-player.git",
  "author": {
    "name": "Loup-Rodolphe THIBAULT",
    "url": "https://github.com/loupthibault"
  },
  "license": "MIT",
  "dependencies": {
    "bodymovin": "^4.5.8",
    "dom-classes": "^1.0.0",
    "dom-events": "^0.1.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "start": "watchify -v -t babelify src/index.js -o build/app.js",
    "bundle": "browserify src/index.js | uglifyjs -c > build/app.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": ["es2015"]
        }
      ]
    ]
  }
}
